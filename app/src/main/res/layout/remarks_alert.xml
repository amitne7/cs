<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_alertTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Remarks"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/page_heading" />

    <EditText
        android:id="@+id/et_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edit_text_border"
        android:ems="5"
        android:hint="Remarks"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:paddingLeft="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_remarks"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_alert_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/alert_positive_button"
            android:text="Submit"
            android:textColor="@color/alert_title_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_alert_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/alert_negative_button"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />
    </LinearLayout>


</RelativeLayout>